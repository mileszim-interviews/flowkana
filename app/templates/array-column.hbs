<h1>Array in Column Order</h1>

<form {{action 'submitCSV' this on='submit'}}>
  <div class="form-group">
    <label for="csvString">CSV</label>
    {{input type='text' value=csvString class='form-control' placeholder='A,B,C,D,E,F,G,...'}}
  </div>
  <div class="form-group">
    <label for="columns">Columns</label>
    {{#x-select value=columns on-change=(action 'selectColumns') as |xs|}}
      {{#xs.option value=2}}2{{/xs.option}}
      {{#xs.option value=3}}3{{/xs.option}}
      {{#xs.option value=4}}4{{/xs.option}}
      {{#xs.option value=5}}5{{/xs.option}}
      {{#xs.option value=6}}6{{/xs.option}}
      {{#xs.option value=7}}7{{/xs.option}}
      {{#xs.option value=8}}8{{/xs.option}}
      {{#xs.option value=9}}9{{/xs.option}}
      {{#xs.option value=10}}10{{/xs.option}}
    {{/x-select}}
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

{{#if tableTriggered}}
  <br/><br/>
  {{column-table columnArray=csvArray numColumns=columns}}
{{/if}}
